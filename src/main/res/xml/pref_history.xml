<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="history_syncing"
        android:title="@string/pref_title_history_syncing"
        android:summary="@string/pref_description_history_syncing"
        android:defaultValue="false"
        android:enabled="false"/>

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="history_syncing_key"
        android:title="@string/pref_title_history_syncing_key"
        android:summary="@string/pref_description_history_syncing_key"
        android:selectAllOnFocus="true"
        android:inputType="textVisiblePassword"
        android:singleLine="true"
        android:maxLines="1"
        android:dependency="history_syncing"
        />

</PreferenceScreen>
