<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:paddingLeft="@dimen/history_thumbnail_margin"
             android:paddingRight="@dimen/history_thumbnail_margin"
             android:clickable="true">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/history_thumbnail_background">

        <ImageView
            android:layout_width="@dimen/history_thumbnail_width"
            android:layout_height="@dimen/history_thumbnail_height"
            android:id="@+id/historyThumbnailImage"
            android:scaleType="centerCrop"
            android:cropToPadding="true"/>
    </FrameLayout>
</FrameLayout>